{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Modifier la catégorie</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow rounded-4">
                <div class="card-body rounded-4 bg-light bg-gradient">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('app_category') }}" class="btn btn-secondary mt-3 w-100">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
