{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center">Modifier la catégorie</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-primary w-100" type="submit">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('app_category') }}" class="btn btn-secondary mt-2 w-100">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
