{# 
   Page de création d'une catégorie (category/create.html.twig)
   -----------------------------------------------------------------
   - Formulaire simple : nom et description
   - Réservé aux admins
#}
{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary">Créer une catégorie</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Créer la catégorie</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
