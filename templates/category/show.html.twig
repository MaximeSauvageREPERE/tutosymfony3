{% extends 'base.html.twig' %}

{% block title %}Détail de la catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Détail de la catégorie</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-body bg-light bg-gradient rounded-4">
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Nom :</strong> {{ category.nom }}</li>
                        <li class="list-group-item"><strong>Description :</strong> {{ category.description }}</li>
                    </ul>
                    <a href="{{ path('app_category') }}" class="btn btn-secondary w-100">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
