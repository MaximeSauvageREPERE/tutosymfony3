
{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 text-primary">Liste des tags</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_tag_create') }}" class="btn btn-success">Ajouter un tag</a>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <table class="table table-bordered table-hover table-striped align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="width: 10%">Nom</th>
                                <th style="width: 70%">Produits associés</th>
                                <th style="width: 20%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for tag in tags %}
                            <tr>
                                <td>{{ tag.nom }}</td>
                                <td>
                                    {% for produit in tag.produits %}
                                        <span class="badge bg-primary">{{ produit.nom }}</span>{% if not loop.last %}, {% endif %}
                                    {% else %}
                                        <span class="text-muted">Aucun produit</span>
                                    {% endfor %}
                                </td>
                                <td>
                                    <div class="d-flex flex-row flex-nowrap gap-2 align-items-center">
                                        <a href="{{ path('app_tag_show', {id: tag.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_tag_edit', {id: tag.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                        <form method="post" action="{{ path('app_tag_delete', {id: tag.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce tag ?');" class="m-0 p-0">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                            <button class="btn btn-sm btn-danger">Supprimer</button>
                                        </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucun tag trouvé.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
