
{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Liste des tags</h1>
        <a href="{{ path('app_tag_create') }}" class="btn btn-success">Ajouter un tag</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Produit associé</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.nom }}</td>
                <td>{{ tag.produit ? tag.produit.nom : '' }}</td>
                <td>
                    <a href="{{ path('app_tag_show', {id: tag.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_tag_edit', {id: tag.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <form method="post" action="{{ path('app_tag_delete', {id: tag.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce tag ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                        <button class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun tag trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
