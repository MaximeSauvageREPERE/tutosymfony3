{% extends 'base.html.twig' %}

{% block title %}Créer un tag{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary">Créer un tag</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.produits, 'Produits associés') }}
                            {{ form_widget(form.produits) }}
                            {{ form_errors(form.produits) }}
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Créer le tag</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
