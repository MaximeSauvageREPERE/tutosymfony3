{% extends 'base.html.twig' %}

{% block title %}Modifier le tag{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center">Modifier le tag</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow rounded-4">
                <div class="card-body rounded-4">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.produits, 'Produits associés') }}
                            {{ form_widget(form.produits) }}
                            {{ form_errors(form.produits) }}
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('app_tag') }}" class="btn btn-secondary mt-2 w-100">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
