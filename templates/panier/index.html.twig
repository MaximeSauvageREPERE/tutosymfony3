{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Mon Panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix unitaire</th>
                        <th>Quantité</th>
                        <th>Sous-total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% if panier.lignes|length > 0 %}
                        {% for ligne in panier.lignes %}
                            <tr>
                                <td>{{ ligne.produit.nom }}</td>
                                <td>{{ ligne.produit.prix }} €</td>
                                <td>
                                    <form method="post" action="{{ path('app_panier_update', {id: ligne.id}) }}" class="d-inline">
                                        <input type="number" name="quantite" value="{{ ligne.quantite }}" min="1" class="form-control form-control-sm" style="width: 80px; display: inline-block;">
                                        <button type="submit" class="btn btn-sm btn-secondary">Mettre à jour</button>
                                    </form>
                                </td>
                                <td>{{ ligne.sousTotal }} €</td>
                                <td>
                                    <form method="post" action="{{ path('app_panier_remove', {id: ligne.id}) }}" style="display:inline-block;">
                                        <button type="submit" class="btn btn-sm btn-danger">Retirer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                Votre panier est vide. <a href="{{ path('app_produit') }}">Voir les produits</a>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Récapitulatif</h5>
                    <p class="card-text">
                        <strong>Total :</strong> {{ panier.lignes|length > 0 ? panier.total : 0 }} €
                    </p>
                    {% if panier.lignes|length > 0 %}
                        <form method="post" action="{{ path('app_panier_validate') }}">
                            <button type="submit" class="btn btn-success w-100 mb-2">Valider la commande</button>
                        </form>
                        <form method="post" action="{{ path('app_panier_clear') }}">
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Vider le panier ?')">Vider le panier</button>
                        </form>
                    {% else %}
                        <button class="btn btn-success w-100 mb-2" disabled>Valider la commande</button>
                        <button class="btn btn-outline-danger w-100" disabled>Vider le panier</button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
