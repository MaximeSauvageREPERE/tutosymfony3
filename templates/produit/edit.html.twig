{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Modifier le produit</h1>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow rounded-4">
                <div class="card-body bg-light bg-gradient rounded-4">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.prix) }}
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prix) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.creationdate) }}
                            {{ form_widget(form.creationdate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.creationdate) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.active) }}
                            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_errors(form.active) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.image) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.categorie) }}
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categorie) }}
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('app_produit') }}" class="btn btn-secondary mt-3 w-100">Retour Ã  la liste</a>
        </div>
    </div>
</div>
{% endblock %}
