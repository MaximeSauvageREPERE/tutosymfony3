
{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 text-primary">Liste des produits</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_produit_create') }}" class="btn btn-success">Ajouter un produit</a>
        {% endif %}
    </div>
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-4 produit-card position-relative overflow-hidden" style="transition: transform 0.2s;">
                    {% if produit.image %}
                    <img src="{{ produit.image }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body bg-light bg-gradient">
                        <h5 class="card-title fw-bold text-primary">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text"><strong>Prix :</strong> <span class="text-success">{{ produit.prix }} €</span></p>
                        <p class="card-text"><strong>Catégorie :</strong> <span class="badge bg-secondary">{{ produit.categorie ? produit.categorie.nom : 'Aucune' }}</span></p>
                        <p class="card-text">
                            <strong>Tags :</strong>
                            {% for tag in produit.tags %}
                                <span class="badge bg-primary">{{ tag.nom }}</span>{% if not loop.last %}, {% endif %}
                            {% else %}
                                <span class="text-muted">Aucun tag</span>
                            {% endfor %}
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 border-top pt-3">
                        <div class="d-flex gap-2 justify-content-between flex-wrap">
                            <a href="{{ path('app_produit_show', {id: produit.id}) }}" class="btn btn-sm btn-info flex-fill shadow-sm">Voir</a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_produit_edit', {id: produit.id}) }}" class="btn btn-sm btn-warning flex-fill shadow-sm">Modifier</a>
                            <form method="post" action="{{ path('app_produit_delete', {id: produit.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');" class="flex-fill m-0 p-0">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn btn-sm btn-danger w-100 shadow-sm">Supprimer</button>
                            </form>
                            {% endif %}
                            <a href="{{ path('app_panier_add', {id: produit.id}) }}" class="btn btn-success btn-sm flex-fill shadow-sm">
                                <i class="bi bi-cart-plus"></i> Ajouter au panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <div class="alert alert-info">Aucun produit trouvé.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
