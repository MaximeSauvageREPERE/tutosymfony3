{# 
   Page de liste des produits (produit/index.html.twig)
   ------------------------------------------------------
   - Affichage en grille de cards Bootstrap
   - Barre de recherche serveur (nom, catégorie, tags)
   - Pagination (12 produits par page)
   - Boutons d'action selon le rôle (admin peut modifier/supprimer)
   - Accessible sans authentification
#}

{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 text-primary">Liste des produits</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_produit_create') }}" class="btn btn-success">Ajouter un produit</a>
        {% endif %}
    </div>
    
    {# 
       Barre de recherche serveur
       - Recherche dans nom produit, nom catégorie, nom tag
       - Affichage du terme recherché
       - Bouton effacer si recherche active
    #}
    <div class="row mb-4">
        <div class="col-12">
            <form method="get" action="{{ path('app_produit') }}" class="card shadow">
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control me-2 rounded" placeholder="Rechercher par nom, catégorie ou tag..." value="{{ search }}" autofocus>
                        <button class="btn btn-primary rounded" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                            </svg>
                            Rechercher
                        </button>
                        {% if search %}
                        <a href="{{ path('app_produit') }}" class="btn btn-secondary rounded ms-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                            </svg>
                            Effacer
                        </a>
                        {% endif %}
                    </div>
                    {% if search %}
                    <small class="text-muted mt-2 d-block">Résultats pour : "{{ search }}"</small>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
    
    {# 
       Grille de produits
       - Affichage en cards Bootstrap responsive (3 colonnes sur desktop)
       - Image, nom, description, prix, catégorie, tags
       - Boutons : voir, modifier (admin), supprimer (admin), ajouter au panier
       - Message si aucun produit trouvé
    #}
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-4 produit-card position-relative overflow-hidden" style="transition: transform 0.2s;">
                    {% if produit.image %}
                    <img src="{{ '/images/produits/' ~ produit.image }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body bg-light bg-gradient">
                        <h5 class="card-title fw-bold text-primary">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text"><strong>Prix :</strong> <span class="text-success">{{ produit.prix }} €</span></p>
                        <p class="card-text"><strong>Catégorie :</strong> <span class="badge bg-secondary">{{ produit.categorie ? produit.categorie.nom : 'Aucune' }}</span></p>
                        <p class="card-text">
                            <strong>Tags :</strong>
                            {% for tag in produit.tags %}
                                <span class="badge bg-primary">{{ tag.nom }}</span>{% if not loop.last %}, {% endif %}
                            {% else %}
                                <span class="text-muted">Aucun tag</span>
                            {% endfor %}
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 border-top pt-3">
                        <div class="d-flex gap-2 justify-content-between flex-wrap">
                            <a href="{{ path('app_produit_show', {id: produit.id}) }}" class="btn btn-sm btn-info flex-fill shadow-sm">Voir</a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_produit_edit', {id: produit.id}) }}" class="btn btn-sm btn-warning flex-fill shadow-sm">Modifier</a>
                            <form method="post" action="{{ path('app_produit_delete', {id: produit.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');" class="flex-fill m-0 p-0">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn btn-sm btn-danger w-100 shadow-sm">Supprimer</button>
                            </form>
                            {% endif %}
                            <a href="{{ path('app_panier_add', {id: produit.id}) }}" class="btn btn-success btn-sm flex-fill shadow-sm">
                                <i class="bi bi-cart-plus"></i> Ajouter au panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <div class="alert alert-info">Aucun produit trouvé.</div>
            </div>
        {% endfor %}
    </div>
    
    {# 
       Pagination
       - Gérée par KnpPaginatorBundle
       - 12 produits par page
       - Affichage dans une card centrée pour un rendu élégant
    #}
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body py-3 d-flex justify-content-center">
                    {{ knp_pagination_render(produits) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
